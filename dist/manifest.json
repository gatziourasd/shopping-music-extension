{
  "name": "Shopping Music",
  "description": "Play your favorite tunes automatically when visiting your chosen websites.",
  "version": "0.1.0",
  "manifest_version": 2,
  "permissions": ["storage", "tabs", "unlimitedStorage"],
  "background": {
    "scripts": ["/build/background-bundle.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "16": "/assets/app-icons/icon16.png",
      "24": "/assets/app-icons/icon24.png",
      "48": "/assets/app-icons/icon48.png",
      "128": "/assets/app-icons/icon128.png"
    },
    "default_title": "Shop Music",
    "default_popup": "index.html"
  }
}
